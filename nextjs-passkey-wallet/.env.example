# LazorKit Configuration
# Copy this file to .env.local and update values as needed

# Solana RPC URL (Devnet by default)
NEXT_PUBLIC_RPC_URL=https://api.devnet.solana.com

# LazorKit Portal URL (authentication)
NEXT_PUBLIC_PORTAL_URL=https://portal.lazor.sh

# Paymaster URL for gasless transactions
NEXT_PUBLIC_PAYMASTER_URL=https://kora.devnet.lazorkit.com

# Optional: Paymaster API key for higher rate limits
# Get your API key from https://portal.lazor.sh
# NEXT_PUBLIC_PAYMASTER_API_KEY=your-api-key-here
